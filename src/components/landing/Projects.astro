---
import { projects } from "../../config/projects.json";
---

<section class="text-center md:text-left p-5">
  <h2 class="text-5xl font-bold text-center">Projects</h2>
  {
    projects.map((project) => (
      <div class="flex flex-col md:flex-row text-justify md:text-left">
        <div class="flex-1 p-4">
          <h2 class="font-bold text-2xl my-6">{project.title}</h2>
          <p class="my-5">{project.description}</p>
          <button class="bg-indigo-500 px-2 py-2 hover:bg-indigo-400 rounded">
            More info
            </button>
        </div>
        <div class="flex-1">
          <img src={project.image} alt="imagen" class="w-72 m-auto" />
        </div>
      </div>
    ))
  }
</section>
